@page
@model ExpenseApp.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">

    @if (!string.IsNullOrEmpty(Model.DbError))
    {
        <div class="alert alert-warning alert-dismissible d-flex align-items-start gap-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-4 text-warning mt-1"></i>
            <div>
                <strong>Database connection issue – showing sample data</strong><br />
                <span class="text-muted small">@Model.DbError</span>
            </div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex align-items-center justify-content-between mb-3">
        <h4 class="fw-semibold mb-0">Users</h4>
        <a href="/Users/Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i> New User
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Manager</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Users.Any())
                    {
                        <tr><td colspan="7" class="text-center text-muted py-4">No users found.</td></tr>
                    }
                    @foreach (var u in Model.Users)
                    {
                        <tr class="@(u.IsActive ? "" : "text-muted")">
                            <td class="small">#@u.UserId</td>
                            <td>@u.UserName</td>
                            <td class="small">@u.Email</td>
                            <td><span class="badge @(u.RoleName == "Manager" ? "bg-primary" : "bg-secondary")">@u.RoleName</span></td>
                            <td class="small">@(u.ManagerName ?? "—")</td>
                            <td>
                                @if (u.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">Inactive</span>
                                }
                            </td>
                            <td>
                                <a href="/Users/Edit?id=@u.UserId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                @if (u.IsActive)
                                {
                                    <form method="post" asp-page-handler="Deactivate" asp-route-id="@u.UserId" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Deactivate @u.UserName?')">Deactivate</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
