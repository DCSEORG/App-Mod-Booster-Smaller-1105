@page
@model ExpenseApp.Pages.Expenses.EditModel
@{
    ViewData["Title"] = $"Edit Expense #{Model.Expense?.ExpenseId}";
}

<div class="container mt-4" style="max-width:600px">
    <a href="/Expenses/Detail?id=@Model.Expense?.ExpenseId" class="text-decoration-none text-muted small">← Back to Expense</a>
    <h4 class="fw-semibold mt-2 mb-4">Edit Expense #@Model.Expense?.ExpenseId</h4>

    @if (Model.Expense is null)
    {
        <div class="alert alert-danger">Expense not found.</div>
        return;
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Expense.ExpenseId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Category <span class="text-danger">*</span></label>
                    <select name="CategoryId" class="form-select" required>
                        @foreach (var c in Model.Categories)
                        {
                            <option value="@c.CategoryId" selected="@(c.CategoryId == Model.Expense.CategoryId)">@c.CategoryName</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Amount (£) <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text">£</span>
                        <input type="number" name="AmountGBP" class="form-control" min="0.01" step="0.01"
                               value="@Model.Expense.AmountDecimal.ToString("F2")" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Date <span class="text-danger">*</span></label>
                    <input type="date" name="ExpenseDate" class="form-control"
                           value="@Model.Expense.ExpenseDate.ToString("yyyy-MM-dd")" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea name="Description" class="form-control" rows="3">@Model.Expense.Description</textarea>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="/Expenses/Detail?id=@Model.Expense.ExpenseId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
