@page
@model ExpenseApp.Pages.Expenses.CreateModel
@{
    ViewData["Title"] = "New Expense";
}

<div class="container mt-4" style="max-width:600px">
    <a href="/Expenses" class="text-decoration-none text-muted small">← Back to Expenses</a>
    <h4 class="fw-semibold mt-2 mb-4">New Expense</h4>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">User <span class="text-danger">*</span></label>
                    <select name="UserId" class="form-select" required>
                        <option value="">— Select user —</option>
                        @foreach (var u in Model.Users)
                        {
                            <option value="@u.UserId">@u.UserName (@u.Email)</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Category <span class="text-danger">*</span></label>
                    <select name="CategoryId" class="form-select" required>
                        <option value="">— Select category —</option>
                        @foreach (var c in Model.Categories)
                        {
                            <option value="@c.CategoryId">@c.CategoryName</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Amount (£) <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text">£</span>
                        <input type="number" name="AmountGBP" class="form-control" min="0.01" step="0.01" placeholder="0.00" required />
                    </div>
                    <div class="form-text">Enter the amount in pounds, e.g. 12.50 for £12.50.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Date <span class="text-danger">*</span></label>
                    <input type="date" name="ExpenseDate" class="form-control" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea name="Description" class="form-control" rows="3" placeholder="Brief description of the expense…"></textarea>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Save as Draft</button>
                    <a href="/Expenses" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
